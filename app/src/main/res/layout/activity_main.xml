<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Weight Input -->
    <EditText
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Gold Weight (grams)"
        android:inputType="numberDecimal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gold Price Input -->
    <EditText
        android:id="@+id/goldValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Gold Price (RM per gram)"
        android:inputType="numberDecimal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RadioGroup Keep/Wear -->
    <RadioGroup
        android:id="@+id/radioGroupType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/goldValue"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/keep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep" />

        <RadioButton
            android:id="@+id/wear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wear" />

    </RadioGroup>

    <!-- Calculate Button -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Output: Total Value -->
    <TextView
        android:id="@+id/totValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Value: RM 0.00"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalculate"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Output: Zakat Payable -->
    <TextView
        android:id="@+id/payValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zakat Payable Value: RM 0.00"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/totValue"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Output: Total Zakat -->
    <TextView
        android:id="@+id/totZakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Zakat Value: RM 0.00"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/payValue"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Reset Button -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/totZakat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
